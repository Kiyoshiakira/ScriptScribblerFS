rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Public profile (read-only for all, writable only by owner)
    match /users/{userId} {
      allow get: if true;
      allow list: if false;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Universal catch-all: OWNER can access any subcollection and future features
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public scripts (any logged-in user can read, owner can write)
    match /users/{userId}/scripts/{scriptId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Error reports (write-only; privacy protected)
    match /error-reports/{reportId} {
      allow create: if request.auth != null;
      allow read, list, update, delete: if false;
    }

    // Feedback (if present, write-only)
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false;
    }

  }
}
